<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
        new Noty({
            type: "error",
            layout: "topRight",
            timeout: "3000",
            text: "<%= message %>",
            theme: "mint"
        }).show();
    <% end %>
  </script>
<% end %>


